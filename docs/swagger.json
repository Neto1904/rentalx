{
    "openapi":"3.0.0",
    "info":{
        "title": "RentX Documentation",
        "description": "This is an API Rent",
        "version": "1.0.0",
        "contact":{
            "email": "netinho1904@hotmail.com"
        }
    },
    "paths":{
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Create a category",
                "description": "Create a new category",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "categoryTest",
                                    "description": "A new car category"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "List categories",
                "description": "List all created categories",
                "response": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "categories/import": {
            "post": {
                "tags": ["Category"],
                "summary": "Upload a new category or set of categories",
                "description": "Upload a new category or set of categories",
                "requestBody":{
                    "content":{
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "file":{
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "response": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/specifications": {
            "tags": ["Specifications"],
            "summary": "Create specification",
            "description": "Create a new specification",
            "requestBody": {
                "content": {
                    "application/json":{
                        "schema": {
                            "$ref": "#/definitions/Specification"
                        }
                    }
                }
            },
            "responses": {
                "201":{
                    "description": "Created"
                },
                "500":{
                    "description": "Specification already exists"
                }
            }
        }
    },
    "definitions": {
        "Specification":{
            "type": "object",
            "properties": {
                "name": {
                    "type":"string"
                },
                "description":{
                    "type":"string"
                }
            }
        }
    }
}